{
  "format_version": "1.10.0",
  "minecraft:client_entity": {
    "description": {
      "identifier": "minecraft:cow",
      "materials": { "default": "cow" },
      "textures": {
        "default": "textures/custom/bigthundermountain/btmtrain01"
      },
      "geometry": {
        "default": "geometry.btmtrain01"
      },
      "render_controllers": [ "controller.render.cow" ],
      "spawn_egg": {
        "texture": "spawn_egg",
        "texture_index": 1
      },
      "animations": {
        "rotate": "animation.generic.rotate",
        "banking": "animation.generic.banking"
			},
      "scripts": {
        "initialize": [
          "variable.slope = 0.0;"
        ],
				"pre_animation": [
          "variable.slope_calc = query.vertical_speed / query.ground_speed;",
          "variable.slope = math.abs(variable.slope-variable.slope_calc)>0.06 ? (variable.slope-variable.slope_calc > 0 ? variable.slope-0.03 : variable.slope+0.03) : variable.slope;"
        ],
				"animate": [
					"rotate"
				]
			}
    }
  }
}
