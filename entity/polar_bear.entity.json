{
  "format_version": "1.10.0",
  "minecraft:client_entity": {
    "description": {
      "identifier": "minecraft:polar_bear",
      "materials": {
        "default": "entity_alphatest"
      },
      "textures": {
        "default": "textures/custom/peterpansflight/peterpans_flight_ship"
      },
      "geometry": {
        "default": "geometry.peterpans_flight_ship"
      },
      "render_controllers": [
        "controller.render.polarbear"
      ],
      "spawn_egg": {
        "texture": "spawn_egg",
        "texture_index": 37
      },
      "animations": {
        "rotate": "animation.generic.rotate"
			},
      "scripts": {
        "initialize": [
          "variable.slope = 0.0;"
        ],
				"pre_animation": [
          "variable.slope_calc = query.vertical_speed / query.ground_speed;",
          "variable.slope = math.abs(variable.slope-variable.slope_calc)>0.06 ? (variable.slope-variable.slope_calc > 0 ? variable.slope-0.03 : variable.slope+0.03) : variable.slope;"
        ],
				"animate": [
					"rotate"
				]
			}
    }
  }
}
