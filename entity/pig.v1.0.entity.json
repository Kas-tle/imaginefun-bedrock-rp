{
  "format_version": "1.10.0",
  "minecraft:client_entity": {
    "description": {
      "identifier": "minecraft:pig",
      "materials": { "default": "pig" },
      "textures": {
        "default": "textures/custom/bigthundermountain/btmtrain02",
        "saddled": "textures/custom/bigthundermountain/btmtrain02"
      },
      "geometry": {
        "default": "geometry.btmtrain02"
      },
      "render_controllers": [ "controller.render.pig" ],
      "spawn_egg": {
        "texture": "spawn_egg",
        "texture_index": 2
      },
      "sound_effects": {
          "btmride1": "frontierland.btm.btmride1"
      },
      "animations": {
        "rotate": "animation.generic.rotate",
        "sound": "animation.btmtrain02.sound"
			},
      "scripts": {
        "initialize": [
          "variable.slope = 0.0;"
        ],
				"pre_animation": [
          "variable.slope_calc = query.vertical_speed / query.ground_speed;",
          "variable.slope = math.abs(variable.slope-variable.slope_calc)>0.06 ? (variable.slope-variable.slope_calc > 0 ? variable.slope-0.03 : variable.slope+0.03) : variable.slope;"
        ],
				"animate": [
					"rotate"
				]
			}
    }
  }
}
